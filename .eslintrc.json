{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "import/extensions": ["error", "ignorePackages"],
    "prefer-arrow-callback": "off",
    "no-shadow": "off",
    "func-names": "off"
  }
}
